{
    // web-app
    // tsconfig.app.json
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "lib": [
            "dom"
        ],
        "types": [
            "node",
            "@nx/react/typings/cssmodule.d.ts",
            "@nx/react/typings/image.d.ts"
        ],
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmit": false,
        "declaration": true,
        "declarationMap": true
    },
    "exclude": [
        "out-tsc",
        "dist",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.tsx",
        "src/**/*.test.tsx",
        "src/**/*.spec.js",
        "src/**/*.test.js",
        "src/**/*.spec.jsx",
        "src/**/*.test.jsx",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs",
        "**/**(deprecated)**",
        "**/**(disabled)**"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "references": [
        {
            "path": "../../packages/types/tsconfig.lib.json"
        },
        {
            "path": "../../packages/logic/tsconfig.lib.json"
        },
        {
            "path": "../../packages/web/tsconfig.lib.json"
        }
    ]
}